# Autônomo Control - Backend Environment Example
# Copiar para .env e ajustar valores reais.

# --- App Core ---
APP_NAME=Autonomo Control API
APP_ENV=development
APP_DEBUG=true
APP_VERSION=0.1.0

# --- Security ---
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# --- Database ---
DB_ENGINE=sqlite
DATABASE_URL=sqlite:///./autonomo_control.db
# Para PostgreSQL (produção):
# DATABASE_URL=postgresql+psycopg2://user:password@host:5432/autonomo_control

# --- CORS ---
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# --- OAuth2 / Google ---
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# --- Email (se aplicável futuramente) ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=CHANGE_ME
SMTP_TLS=True

# --- Monitoring (placeholders) ---
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# --- Feature Flags ---
ENABLE_GOOGLE_AUTH=true
ENABLE_ANALYTICS=false

# --- Logging ---
LOG_LEVEL=INFO
STRUCTURED_LOGS=true

# --- Frontend Build Time (consumido no front se exposto) ---
PUBLIC_API_BASE=http://localhost:8000/api/v1

# =============================================================
# Frontend (.env) exemplo (colocar em frontend/.env)
# =============================================================
# REACT_APP_API_URL=http://localhost:8000/api/v1
# REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
# REACT_APP_FEATURE_ANALYTICS=false
